generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  userID        String  @id @map("_id") @default(cuid())
  username  String
  email     String  @unique
  password  String
  profileImage  Bytes
  timestamp DateTime @default(now())
  blogs     Blog[]
  likes     Like[]
}

model Blog {
  blogID          String  @id @map("_id") @default(cuid())
  title       String  @unique
  description String
  likesCount  Int     @default(0)
  timestamp   DateTime @default(now())
  userId    String  @db.ObjectId
  user      User    @relation(fields: [userId], references: [userID])
  likes       Like[]
}

model Like {
  likeID          String  @id @map("_id") @default(cuid())
  userId      String  @db.ObjectId
  blogId      String  @db.ObjectId
  user        User    @relation(fields: [userId], references: [userID])
  blog        Blog    @relation(fields: [blogId], references: [blogID])
  timestamp   DateTime @default(now())
  // Unique constraint can be added here for uniqueness within the model
}